@page
@using CRM.Utility
@model CRM.Pages.Sale.Order.IndexModel
@{
}
@if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.RootRole) || User.IsInRole(SD.SupervisorRole) || User.IsInRole(SD.SalesRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Order List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
            </div>
        </div>
        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Reference</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
    }
        else
        {
            <div class="container-lg">
                <img style="padding-left:70px;"src="~/images/Access-Denied.png" />
            </div>
        }
    @section Scripts{
        <script src="~/js/order.js"></script>
    }