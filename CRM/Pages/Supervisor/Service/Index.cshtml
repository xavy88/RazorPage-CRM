@page
@using CRM.Utility
@model CRM.Pages.Supervisor.Service.IndexModel
@{
}
@if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.RootRole) || User.IsInRole(SD.SupervisorRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary"><i class="fa fa-handshake-o" aria-hidden="true"></i> Service List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
            </div>
        </div>
        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Department</th>
                    <!--<th>Description</th>-->
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
}
else
{
    <div class="container-lg">
        <img style="padding-left:70px;" src="~/images/Access-Denied.png" />
    </div>
}
@section Scripts{
    <script src="~/js/service.js"></script>
}