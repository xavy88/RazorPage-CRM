@page
@using CRM.Utility
@model CRM.Pages.Admin.Department.DetailModel
@{
}
@if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.RootRole))
{
    <form method="post" asp-action="Detail">
        <div class="container">
            <div class="row px-2 mx-2 backgroundWhite border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.DepartmentObj.Id != 0)
                {
                    <input type="hidden" asp-for="DepartmentObj.Id" />
                }

                <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                    <h2 class="text-primary page-header pb-3">
                        <i class="fa fa-info-circle" aria-hidden="true"></i> Department Details
                    </h2>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/User/Home/Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-page="./Index">Department</a></li>
                        <li class="breadcrumb-item active">Department Details</li>
                    </ol>
                </div>

                <div class="col-8 pt-3">
                    <div class="form-group row">
                        <div class="col-4 pt-3">
                            <label asp-for="DepartmentObj.Name"></label>
                        </div>

                        <div class="col-8 pt-3">
                            <input class="form-control detail-form" asp-for="DepartmentObj.Name" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="DepartmentObj.Description"></label>
                        </div>

                        <div class="col-8">
                            <textarea class="form-control detail-form" asp-for="DepartmentObj.Description" readonly></textarea>
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col-6 pt-4">
                                    <a asp-page="./Index" class="btn btn-success btn-block form-control"><i class="fas fa-arrow-circle-left"></i>  Back To List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4" style="padding-top: 4em;">
                    <img src="~/images/Dep-Det.png" width="100%" />
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="container-lg">
        <img style="padding-left:70px;" src="~/images/Access-Denied.png" />
    </div>
}
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            readonly: 1,
            menubar: 'file edit format'
        });

    </script>

}

